public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        // DECLARE VARIABLES
        int weight, width, length, depth, volume;

        // GET INPUT DETAILS OF PACKAGE
        System.out.print("Enter weight of package in grams>");
        weight = scanner.nextInt();

        System.out.print("Enter width of package>");
        width = scanner.nextInt();

        System.out.print("Enter length of package>");
        length = scanner.nextInt();

        System.out.print("Enter depth of package>");
        depth = scanner.nextInt();

        volume = width + length + depth;

        // CHECK CONDITIONS ARE CORRECT
        if (weight > 2000) {
            System.out.print("Your parcel weighs above 2000 grams");
        }

        if (volume > 90) {
            System.out.print("Your package does not qualify as a small parcel");
        }

        if (width > 60 || length < 60 || depth < 60) {
            System.out.print("The maximum dimension allowed is 60cm");
        } else {
            System.out.print("Your package can be sent as a small parcel");
        }
    }

}
